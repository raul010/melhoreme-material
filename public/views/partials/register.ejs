<div ng-controller="RegisterController" layout="column">
    <br/>
    <md-content layout-padding class="autoScroll">
        <md-input-container class="md-icon-float" >
            <label>Name</label>
            <md-icon md-svg-icon="social:person"></md-icon>
            <input ng-model="user.name" type="text">
        </md-input-container>

        <md-input-container md-no-float>
            <label>Name</label>
            <md-icon md-svg-src="maps:local_phone"></md-icon>
            <input ng-model="user.phone" type="text">
        </md-input-container>

        <md-input-container >
            <!-- Use floating placeholder instead of label -->
            <md-icon md-svg-src="communication:email"></md-icon>
            <input ng-model="user.email" type="email" placeholder="Email (required)" ng-required="true">
        </md-input-container>

        <md-input-container md-no-float>
            <md-icon md-svg-src="maps:place" style="display:inline-block;"></md-icon>
            <input ng-model="user.address" type="text" placeholder="Address" >
        </md-input-container>
    </md-content>
</div>